{
  "name": "snapnet-workforce-management",
  "version": "1.0.0",
  "description": "Scalable workforce management system built with NestJS, TypeORM, RabbitMQ, and Redis",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "test": "jest --config ./jest.config.js --setupFilesAfterEnv=./test/setup.ts",
    "test:watch": "jest --watch --config ./jest.config.js --setupFilesAfterEnv=./test/setup.ts",
    "test:cov": "jest --coverage --config ./jest.config.js",
    "test:ci": "jest --runInBand --detectOpenHandles",
    "migration:generate": "ts-node -r tsconfig-paths/register ./src/database/typeorm-cli.ts migration:generate",
    "migration:run": "ts-node -r tsconfig-paths/register ./src/database/typeorm-cli.ts migration:run",
    "migration:revert": "ts-node -r tsconfig-paths/register ./src/database/typeorm-cli.ts migration:revert",
    "docker:build": "docker build -t snapnet:latest .",
    "docker:build-migrator": "docker build --target migrator -t snapnet:migrator .",
    "docker:migrate": "npm run docker:build-migrator && docker run --rm --env-file .env snapnet:migrator npm run migration:run",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^4.0.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/typeorm": "^10.0.0",
    "@types/lodash": "^4.17.20",
    "ajv": "^8.12.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^7.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.20.0"
  }
}
